<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.bobojing.scantest.ExtendScanActivity">
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/capture" />
    <RelativeLayout
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:background="#3F51B5"
        android:layout_height="50dp">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码购物"
            android:textColor="#fff"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/goBack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            />
    </RelativeLayout>
    <TextView
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请扫描二维码/条形码"
        android:textColor="#fff"
        />
    <RelativeLayout
        android:id="@+id/ll_tool"
        android:background="#2a2d2d"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp">
    <ImageView
    android:id="@+id/goodIcon"
    android:layout_centerVertical="true"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:background="#fff"
    android:src="@drawable/timg"
    android:layout_marginLeft="80dp"
    />
        <TextView
            android:id="@+id/tv_num"
            android:layout_toRightOf="@id/goodIcon"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已扫描 0 件商品"
            android:textColor="#fff"
            />
    </RelativeLayout>
</FrameLayout>
